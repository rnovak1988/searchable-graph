<div class="navbar navbar-inverse navbar-fixed-top" data-ng-controller="rootController">
  <div class="container-fluid">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#graph-nav-top" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <span class="navbar-brand">YOLO</span>
    </div>

    <div class="collapse navbar-collapse" id="graph-nav-top">

      <span data-ng-show="application_state === window.APPLICATION_SATES.HOME || application_state === window.APPLICATION_SATES.MANAGE_DOCUMENT" class="ng-hide">
        <ul class="nav navbar-nav">
          <li class="active"><a href="/">Home</a></li>
          <li class="dropdown">
            <a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Document <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="javascript:void(0)" data-ng-click="navigate_to('create_document')"><span class="glyphicon glyphicon-file"></span> New</a></li>
              <li><a href="javascript:void(0)" data-ng-click="navigate_to('select_document')"><span class="glyphicon glyphicon-open"></span> Open</a></li>
            </ul>
          </li>
        </ul>
      </span>
      <span data-ng-show="application_state === window.APPLICATION_SATES.EDIT_GRAPH" class="ng-hide">
        <ul class="nav navbar-nav">
          <li><a href="javascript:void(0)" data-ng-click="navigate_to('home')">Home</a></li>
          <li class="dropdown active">
            <a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{$root.current_document.title}} <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="javascript:void(0)"><span class="glyphicon glyphicon-save-file"></span>Save Document</a></li>
            </ul>
          </li>
        </ul>
      </span>

      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            <%= current_user.email %> <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><a href="javascript:void(0)"><span class="glyphicon glyphicon-cog"></span> Settings</a></li>
            <li>
              <%= link_to destroy_user_session_path, :method => :delete do %>
                <span class="glyphicon glyphicon-log-out"></span> Log Out
              <% end %>
            </li>
          </ul>
        </li>
      </ul>

    </div>

  </div>
</div>